<h1>Votre commande</h1>
<% if(products){ %>
  <form action="map" method="GET">
    <table class="table col-md-8" id="tab">
    <%for(var item in products){
        %>
    <tr>
    <td>
                <h3><%= products[item].title %></h3>
                <div>
                <span class="price"><%= products[item].price %></span>
                </div>
                <div class="float-right">
                <input class="min btn" name="" type="button" value="-" />
                <input class="text_box" name="" type="number" value="1" placeholder="1"/>
                <input class="add btn" name="" type="button" value="+" />
                <a class="delete btn btn-primary float-right" role="button">Supprimer</a>
                </div>
</td>
</tr>
<%} %>
</table>
