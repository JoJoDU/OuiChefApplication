<%- include header %>
<div id="app">
    <h1>{{title}}</h1>
</div>
<div id="recette" style="margin-top: 50px;">
    <div class="card-deck">
        <div v-for="item in recette" >

                <div class="card" style="width: 20rem;height:100%;">
                    <img v-bind:src="'/image/'+item.id+'.jpeg'" class="card-img-top" height="200px">
                    <div class="card-body" >
                        <h5 class="card-title">
                            {{item.title}}</h5>
                        <p class="card-text" style="margin-bottom: 40px">{{item.text}}</p>
                            <a  :href="'/recetteDetail?id='+item.id" class="btn btn-primary" style="position: absolute;bottom:10px">Les détails</a>
                    </div>
                </div>

        </div>
    </div>
</div>
<div>
    <div style="text-align: center;margin-top: 50px">
       <a  href="/createRecette"><button type="button" class="btn btn-success">Créez vos propres recettes</button></a>
    </div>
</div>


</div>

<script src="/javascripts/pageRecette.js"></script>

<script src="/javascripts/jquery.min.js"></script>
<script src="/javascripts/bootstrap.min.js"></script>
</body>
</html>